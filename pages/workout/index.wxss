/**index.wxss**/
.wrap-content {
  background: #EDEFF3;
  margin-bottom: 200rpx;
}
.wrap-list {
  background: white;
  padding: 20rpx 40rpx;
  margin-bottom: 40rpx;
  border: 1px solid #e8eef4;
  background-color: #fff;
  overflow: hidden;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);
}
.wrap-list .title {
  font-size: 12pt;
  margin-bottom: 20rpx;
}
.wrap-list .wrap-cover {
  padding-bottom: 56%;
  width: 100%;
  position: relative;
}
.wrap-list .wrap-cover .cover{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;  
}
.info {
  margin-top: 10rpx;
  display: flex;
  font-size: 9pt;
  color: #868686;
  align-items: center;
  justify-content: space-between;
}
.user-info {
  display: flex;
  align-items: center;
}
.userinfo-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.work-num {
  margin-right: 40rpx
}