<!--index.wxml-->
<view class="wrap-content">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <view class="section__title">名称</view>
      <input name="title" placeholder="please input here" />
    </view>
     <view class="section section_gap">
      <view class="section__title">阶段</view>
      <checkbox-group name="stage">
        <label><checkbox value="warmup"/>热身</label>
        <label><checkbox value="work"/>运动</label>
        <label><checkbox value="strech"/>拉伸</label>
      </checkbox-group>
    </view>
    <view class="section section_gap">
      <view class="section__title">所属运动</view>
      <radio-group name="sport">
        <label><radio value="VIPR"/>VIPR</label>
        <label><radio value="radio2"/>敏捷梯</label>
      </radio-group>
    </view>
    <view class="btn-area">
      <button formType="submit">Submit</button>
      <button formType="reset">Reset</button>
    </view>
  </form>
</view>
